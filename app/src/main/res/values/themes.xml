<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedsHandy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medshandy_blue</item>
        <item name="colorPrimaryVariant">@color/medshandy_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medshandy_blue</item>
        <item name="colorSecondaryVariant">@color/medshandy_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/medshandy_background</item>
        <item name="colorSurface">@color/surface_color</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/medshandy_blue</item>
        <item name="android:textColorSecondary">@color/medshandy_light</item>
        <!-- Default styles -->
        <item name="materialButtonStyle">@style/Widget.MedsHandy.Button</item>
        <item name="textInputStyle">@style/Widget.MedsHandy.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.MedsHandy.CardView</item>
    </style>

    <!-- Text Styles -->
    <style name="MedsHandy.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/medshandy_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedsHandy.TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/medshandy_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MedsHandy.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/medshandy_blue</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>