<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedsHandy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medical_green</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Card customization -->
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardElevation">2dp</item>
        <!-- Material components customization -->
        <item name="materialCardViewStyle">@style/Widget.MedsHandy.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MedsHandy.Button</item>
        <item name="textInputStyle">@style/Widget.MedsHandy.TextInputLayout</item>
    </style>
</resources>