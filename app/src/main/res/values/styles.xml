<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card style -->
    <style name="Widget.MedsHandy.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MedsHandy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Text Input style -->
    <style name="Widget.MedsHandy.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>
</resources>
